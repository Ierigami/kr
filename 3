#include <iostream>;
using namespace std;

int main() {

	setlocale(0, "");

	int hor, vert, sum = 0;
	cout << "Введите количество клеток по горизонтали: ";
	cin >> hor;
	cout << "Введите количество клеток по вертикали: ";
	cin >> vert;
	
	for (int i = 1; i <= hor; i++) {
		for (int j = 1; j <= vert; j++) {
			if ((i == 1) && (j == 1)) {
				sum = sum + hor * vert;
			}
			else if ((i == hor) && (j == vert)) {
				sum += 1;
			}
			else {
				if (i > j) {
					sum = sum + (i - 1) * i;
				}
				else if (j > i) {
					sum = sum + (j - 1) * j;
				}
				else if (i == j) {
					sum = sum + (i - 1) * (j - 1);
				}
			}
		}
	}
	cout << "Ответ: " << sum;
}
