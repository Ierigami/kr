#include <iostream>;
using namespace std;

int main() {
	setlocale(0, "");
	int A, B, C, n;
	bool f = true;
	cout << "Введите три числа - А, B, C\n";
	cin >> A >> B >> C;
	if ((A <= 0) || (B <= 0) || (C <= 0)) {
		cout << "Числа не могут быть отрицательными";
	}
	else {
		for (int i = 0; i < 10000000; i++) {
			if (A + B * i < C) {
				n = i;
			}
			else {
				break;
			}
		}
		cout << n;
	}
	
}
